<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @article && @article.id && @current_user.profile_id == 1 %>
  <div class=''>
    <h3><%= _("Merge Articles") %></h3>
  </div>
  <%= form_tag("/admin/content/merge_with/#{@article.id}", :id => "merge_with", :name => "merge_with", :method => 'post', :controller => 'content') do %>
    <div>Article ID <%= text_field_tag 'merge_with' %></div>
    <%= submit_tag 'Merge' %>
  <% end %>
<% end %>
